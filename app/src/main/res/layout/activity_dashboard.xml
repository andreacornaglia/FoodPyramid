<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="andreacornaglia.net.foodpyramid.DashboardActivity">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:id="@+id/cardFact"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/ivMenuItem"
                    android:src="@drawable/running"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fact of the Day"
                    android:id="@+id/tvFact"
                    android:textSize="22sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:maxWidth="180dp"
                android:layout_height="wrap_content"
                android:text="Exercise Boosts Brainpower- Exercise increases energy levels and increases serotonin in the brain, which leads to improved mental clarity"
                android:id="@+id/tvFactDescription"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#a0000000"
                android:padding="8dp"
                android:textSize="12sp"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:id="@+id/cardPyramid"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/ivImagePyramid"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Pyramid"
                android:id="@+id/tvPyramid"
                android:textSize="22sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:maxWidth="180dp"
                android:layout_height="wrap_content"
                android:text="Strawberries contain lots of vitamins"
                android:id="@+id/tvPyramidDescription"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#a0000000"
                android:padding="8dp"
                android:textSize="12sp"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:id="@+id/cardStats"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/ivStats"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet Stats"
                android:id="@+id/tvStats"
                android:textSize="22sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:maxWidth="180dp"
                android:layout_height="wrap_content"
                android:text="Strawberries contain lots of vitamins"
                android:id="@+id/tvStatsDescription"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#a0000000"
                android:padding="8dp"
                android:textSize="12sp"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
